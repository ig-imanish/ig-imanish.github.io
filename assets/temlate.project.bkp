        .slider-dot.active {
            background-color: #ffffff;
            transform: scale(1.2);
        }

        .slider-dot:hover {
            background-color: rgba(255, 255, 255, 0.8);
        }

        .slider-arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 48px;
            height: 48px;
            background-color: rgba(0, 0, 0, 0.6);
            border-radius: 50%;
